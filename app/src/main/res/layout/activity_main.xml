<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfirstapp.MainActivity">


    <Button
        android:id="@+id/button1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:onClick="dial1"
        android:text="1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial2"
        android:text="2" />

    <Button
        android:id="@+id/button25"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial3"
        android:text="3" />

    <Button
        android:id="@+id/button26"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial4"
        android:text="4" />

    <Button
        android:id="@+id/button27"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button26"
        android:layout_toLeftOf="@+id/button25"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial5"
        android:text="5" />

    <Button
        android:id="@+id/button28"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button27"
        android:layout_alignRight="@+id/button25"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial6"
        android:text="6" />

    <Button
        android:id="@+id/button29"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button26"
        android:layout_toLeftOf="@+id/button27"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial7"
        android:text="7" />

    <Button
        android:id="@+id/button30"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button29"
        android:layout_toLeftOf="@+id/button28"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial8"
        android:text="8" />

    <Button
        android:id="@+id/button31"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button28"
        android:layout_below="@+id/button27"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial9"
        android:text="9" />

    <Button
        android:id="@+id/button32"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dial0"
        android:text="0"
        android:layout_below="@+id/button30"
        android:layout_toRightOf="@+id/button29" />
    <Button
        android:id="@+id/button33"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialdecimal"
        android:text="."
        android:layout_alignBaseline="@+id/button32"
        android:layout_alignBottom="@+id/button32"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button34"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="evaluate"
        android:text="="
        android:layout_below="@+id/button31"
        android:layout_toRightOf="@+id/button32" />

    <Button
        android:id="@+id/button35"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialC"
        android:text="C"
        android:layout_below="@+id/button33"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button36"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialleft"
        android:text="("
        android:layout_below="@+id/button32"
        android:layout_toRightOf="@+id/button35" />

    <Button
        android:id="@+id/button37"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialright"
        android:text=")"
        android:layout_below="@+id/button34"
        android:layout_toRightOf="@+id/button32" />

    <Button
        android:id="@+id/button38"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialplus"
        android:text="+"
        android:layout_alignBaseline="@+id/button25"
        android:layout_alignBottom="@+id/button25"
        android:layout_toRightOf="@+id/button25" />

    <Button
        android:id="@+id/button39"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialminus"
        android:text="-"
        android:layout_below="@+id/button38"
        android:layout_toRightOf="@+id/button28" />

    <Button
        android:id="@+id/button40"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialmultiplication"
        android:text="*"
        android:layout_below="@+id/button39"
        android:layout_toRightOf="@+id/button31" />

    <Button
        android:id="@+id/button41"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialdevision"
        android:text="/"
        android:layout_below="@+id/button40"
        android:layout_toRightOf="@+id/button31" />

    <Button
        android:id="@+id/button42"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="dialto"
        android:text="^"
        android:layout_below="@+id/button41"
        android:layout_toRightOf="@+id/button34" />

    <Button
        android:id="@+id/button43"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="backspace"
        android:text="Z"
        android:layout_alignBaseline="@+id/button38"
        android:layout_alignBottom="@+id/button38"
        android:layout_toRightOf="@+id/button38" />

    <Button
        android:id="@+id/button44"
        android:layout_width="40dp"
        android:layout_height="200dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="flash"
        android:text="Torch"
        android:layout_alignBottom="@+id/button42"
        android:layout_toRightOf="@+id/button41" />


    <TextView
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:text=""
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button3" />


</RelativeLayout>
